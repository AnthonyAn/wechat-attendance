/**app.wxss**/
@import "./template/toast/toast.wxss";
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 16px;
  box-sizing: border-box;
}


/** 带文字和图片描述的的输入框 **/
.fm{
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
  width: 100%;
  align-items: center;
}
.getinfo{
  font-size: 12px;
  margin: 80rpx auto;
  width: 500rpx;
  margin-bottom:0rpx;
  text-align: center;
}
.avatar_1{
  margin-top: 100rpx;
  box-sizing: border-box;
  border-radius: 90rpx;
  width: 180rpx;
  height: 180rpx;
  border: solid 3px black;
}

.ipt{
  margin: 10rpx;
  display: flex;
  flex-direction: row;
  width: 750rpx;
  height: 80rpx;
  align-items: center;
  background: ghostwhite;
  border-radius: 20rpx;
}

.img{
  background: #83D6F9;
  width: 80rpx;
  height: 100%;
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  padding: 25rpx;
  box-sizing: border-box;
}

.ipt-label{
  font-size: 14px;
  margin-left: -13rpx;
  display: flex;
  align-items: center;
  background: #83D6F9;
  width: 80rpx;
  height: 100%;
}

.ipt-txt{
  font-size: 14px;
  height: 100%;
  width: 580rpx;
  box-sizing: border-box;
  padding: 20rpx;
}

.btn-submit{
  display: flex;
  width: 100%;
  height: 80rpx;
  background: transparent;
  border: gainsboro 1px solid;
margin-top: 60rpx;
border-radius: 0;
justify-content: center;
align-items: center;
}

/**定义卡片**/
.card{
  background-color: #83D6F9;
  box-sizing: border-box;
  width: 100%;
  height: 450rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}