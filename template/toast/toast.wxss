.toastbox{
  position: fixed;
  bottom: 15%;
  display: flex;
  z-index: 999;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 50rpx;
  box-sizing: border-box;
}
.toastcontent{
    border-radius: 10rpx;
  background-color: rgba(0, 0, 0, 0.6);

  padding:  20rpx 25rpx;
  
display: flex;
justify-content: center;
align-items: center;
}
.toasttext{
  color: white;
  font-size: 15px;
  text-align: center;
}