/* pages/setting/setting.wxss */
page{
  background-color: #EFEDE2
}

.container{
  position:fixed;
  width: 100%;
}

.header {
  z-index: -2;
  background-size: 100%;
  position: relative;
  background-color: #83D6F9;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 460rpx;
  width: 100%;
}
.bgim{
   z-index: -1;
  width: 100%;
  height: 130%;
  position: absolute;
  bottom: -60rpx;
  opacity: 0.5;
}


.avatar {
    margin-top: -80rpx;
    box-shadow: 0 0 50rpx 6rpx #fafafa;
  width: 180rpx;
  height: 180rpx;
  border-radius: 90rpx;

}

.nickname {
  z-index: 9;
  top: 320rpx;
  position: absolute;
}

.motto {
   z-index: 9;
  top: 370rpx;
  position: absolute;
}

.bg{
  z-index: -999;
  position:absolute;
  bottom: 0;
  background: url(http://www.suda.edu.cn/images/25.jpg) no-repeat -550rpx 0;
  background-size: auto 300rpx;
  width: 100%;
  height: 300rpx;
}

.table{
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 100%;
  opacity: 0.6;
}
.section{
    margin-top: 20rpx;
display: flex;
  flex-direction: column;
  justify-content: center;
    width: 100%;
}

.item{
   margin: 1px;
  display: flex;
  align-items: center;
  width: 100%;
  height: 100rpx;
  background-color: white;
}

.itemimg{
 margin: 20rpx;
  width: 60rpx;
  height: 60%;
}

.itemtxt{
  padding-left: 40rpx;
  font-size: 14px;
}