/**index.wxss**/
page{
background-color: #83D6F9
}
.container{
  position:fixed;
  width: 100%;
}
.banner{
  width: 100%;
}

.bg{
  position: absolute;
  bottom: 0rpx;
  background: url(http://aff.suda.edu.cn/default/home/images/bg_pic.png) no-repeat 0rpx 0;
  background-size: 100% 100%;
  width: 100%;
  height: 550rpx;

}
.ics{
  margin-top: 90rpx;
  display: flex;
  justify-content: space-around;
  width: 750rpx;
  height: 400rpx;
}
.ic{
  width: 150rpx;
  height: 185rpx;
}
.tips{
  margin-top: 80rpx;
}

.navbox{
  align-items: center;
  display: flex;
  justify-content: space-around;
  width: 100%;
  flex-wrap: wrap;
  height: 400rpx;
}

.navitem{
  
  background-size: 100%;
  margin:0 10rpx 0rpx  10rpx;
  box-sizing: border-box;
  border-radius: 15rpx;
    display: flex;
  justify-content: center;
  align-items: center;
width: 150rpx;
height: 150rpx;
box-shadow: 0 0 30rpx rgba(46,104,170,0.8);
}

.navitem:active{
  box-shadow: 0 0 30rpx 5rpx rgba(46,104,170,0.8);
}

.navimage{
  width: 70%;
  height: 70%;
}

.picker{
  margin:80rpx 0 0 0;
  border-radius: 60rpx;
  width: 80%;
  height: 400rpx;
}

.indicator{
height: 70rpx;
}

.mask{
  border-radius: 20rpx;
  background-color: rgba(46,104,170,0.2)
}

.pickeritem{
  display: flex;
  justify-content: center;
  align-self: center;
  align-items: center
}

.signbtn{
  line-height:40rpx;
  width: 80%;
  padding: 15rpx;
  font-size: 15px;
  margin:70rpx 0 0 0;
  color: white;
  background: rgba(46,104,170,0.7)
}